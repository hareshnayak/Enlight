<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/breakingNews">

    <fragment
        android:id="@+id/breakingNews"
        android:name="com.hareshnayak.enlight.ui.fragments.BreakingNews"
        android:label="BreakingNews" >
        <action
            android:id="@+id/action_breakingNews_to_article"
            app:destination="@id/article" />
    </fragment>
    <fragment
        android:id="@+id/article"
        android:name="com.hareshnayak.enlight.ui.fragments.Article"
        android:label="Article" />
    <fragment
        android:id="@+id/savedNews"
        android:name="com.hareshnayak.enlight.ui.fragments.SavedNews"
        android:label="SavedNews" >
        <action
            android:id="@+id/action_savedNews_to_article"
            app:destination="@id/article" />
    </fragment>
    <fragment
        android:id="@+id/searchNews"
        android:name="com.hareshnayak.enlight.ui.fragments.SearchNews"
        android:label="SearchNews" >
        <action
            android:id="@+id/action_searchNews_to_article"
            app:destination="@id/article" />
    </fragment>
</navigation>